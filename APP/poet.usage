#!/usr/bin/env python3
from pathlib import Path
import os
HERE=Path(os.path.realpath(__file__)).parent
name=os.environ['BLname']

def subname4path(path):
    name = path.name
    ii = name.find('.')
    return name[ii+1:]

print( 'USAGE:' )
print( f'    {name} SUBCOMMAND' )
print( 'SUBCOMMANDS:' )
for path in HERE.glob('poet.*'):
    print('    ' + subname4path(path))
